mixin counter(dark=false)
  .counter-style#counter_target(class=dark ? 'dark' : '')
    .container.max-md
      .row.justify-content-center.align-items-center
        .col.py-4
          .counter-item
            |
            |
            span.icon.ion-flag
            |
            |
            .text
              h4.display-1
                | + 
                span.numscroller(
                  data-min="0"
                  data-max="123"
                  data-delay="5"
                  data-increment="8"
                ) &nbsp;
              h6.use-text-subtitle2 Lorem Ipsum
