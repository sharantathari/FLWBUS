.root
  .container.carousel-header
    +title-main("left", $t.education_landing.popular_title, $t.education_landing.popular_desc, "secondary")
    |
    |
    a.btn-flat.waves-effect.primary-text.view-all(href=link.education.product)
      | #{$t.common.btn_seeall}
      i.material-icons.icon arrow_forward
    |
    |
  .container
    .floating-artwork
      +slider-art('course')
        .wow.fadeInRightShort(data-wow-offset="60" data-wow-delay="0.3s" data-wow-duration="0.5s")
          |
          |
          img.img-2d3d(
            src=img_assets+img_artwork[36]
            data-2d=img_assets+img_artwork[35]
            data-3d=img_assets+img_artwork[36]
            class="img-2d3d"
            alt='popular course'
          )/
          |
          |
  .slider-wrap
    .carousel
      .slick-carousel#course_carousel(data-length=courseData.length)
        .props.item-props-first
          div
        each item in courseData
          .item
            +product-card(item.rating, item.price, item.img, item.title, item.desc, 'round', portrait, link.education.productDetail)
      |
      |
      button.btn-floating.nav.prev.waves-effect#prev_project(type="button")
        |
        |
        i.ion-ios-arrow-back
        |
        |
      |
      |
      button.btn-floating.nav.next.waves-effect#next_project(type="button")
        |
        |
        i.ion-ios-arrow-forward
        |
        |
      |
      |
