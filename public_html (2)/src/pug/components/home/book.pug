mixin book(img, title, desc, rating, price, href, color, expand)
  .book(class=expand ? "expanded" : "collapsed" style='border: 2px solid ' + color)
    figure
      |
      |
      img(src=img alt="title")/
      |
      |
      figcaption(style=`background: ${color}`)
        |
        |
        span
          | #{title}
        |
        |
      |
      |
    .desc
      .text
        h6.title.pb-2.text-truncate #{title}
        p.use-text-paragraph
          | #{desc}
      div
        .property
          if rating > 0
            .rating
              - var n = 1
              - var m = 1
              - var left = 5 - rating
              while n <= rating
                i.material-icons.star-icon(title=n++) star
              while m <= left
                i.material-icons.star-icon-disable(title=m++) star
          if price > 0
            strong $#{price}
        |
        |
        a.btn.btn-outlined.primary.button.block(href=href)
          | #{$t.common.btn_detail}
        |
        |
