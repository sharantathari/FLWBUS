-
  var footers = [
    {
      title: "Company",
      description: ["Team", "History", "Contact us", "Locations"],
      link: ["#team", "#history", "#contact-us", "#locations"]
    },
    {
      title: "Resources",
      description: [
        "Resource",
        "Resource name",
        "Another resource",
        "Final resource"
      ],
      link: [
        "#resource",
        "#resource-name",
        "#another-resource",
        "#final-resource"
      ]
    },
    {
      title: "Legal",
      description: ["Privacy policy", "Terms of use"],
      link: ["#privacy-policy", "#terms-of-use"]
    }
  ]

footer.footer-sitemap
  include ./decoration-bottom
  .container.mq-sm-down(data-class='fixed-width')
    .row
      .col-md-3.pa-lg-4.logo-area
        .logo
          include ../logo.pug
          +logo('landscape')
        p.body-2
          | #{$t.education_landing.banner_desc}
        p.body-2.hidden-sm-down
          | &copy; #{brand.education.footerText}
      .col-md-6.pa-4
        ul.show-sm-down.collapsible
          each footer in footers
            li.accordion-content
              .collapsible-header
                h6.title #{ footer.title }
                i.material-icons.right.arrow expand_more
              .collapsible-body
                ul
                  each item, index in footer.description
                    li
                      a(href=footer.link[index]) #{item}
        .row.show-md-up.justify-content-around
          each footer in footers
            .col.pa-4.site-map-item
              h6.title.mb-4 #{footer.title}
              ul
                each item, index in footer.description
                  li
                    a(href=footer.link[index]) #{item}
      .col-md-3.pa-4
        .socmed
          |
          |
          a.btn.btn-icon.waves-effect
            span.ion-social-facebook.icon
          |
          |
          a.btn.btn-icon.waves-effect
            span.ion-social-twitter.icon
          |
          |
          a.btn.btn-icon.waves-effect
            span.ion-social-instagram.icon
          |
          |
          a.btn.btn-icon.waves-effect
            span.ion-social-linkedin.icon
          |
          |
        - var locales = ['ar','de','en','id','pt','zh']
        .select-lang.select-outlined
          |
          |
          select.select#lang_select
            each locale in locales
              option(value=locale selected=locale === doc_lang) #{$t.common[locale]}
          |
          |
        p.body-2.mt-5.text-center.hidden-md-up
          | &copy; #{brand.education.footerText}