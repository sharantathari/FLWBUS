include ../../paper.pug

-
  var products = [
    {
      image: imgAPI.photo[25],
      text: 'Sed lacinia velit',
      price: '32'
    },
    {
      image: imgAPI.photo[26],
      text: 'Sed lacinia velit',
      price: '20'
    },
    {
      image: imgAPI.photo[27],
      text: 'Sed lacinia velit',
      price: '15'
    },
    {
      image: imgAPI.photo[28],
      text: 'Sed lacinia velit',
      price: '21'
    }
  ]
  
+paper('Related Products', 'label', 'Donec commodo convallis ligula eget suscipit orci.')
  div
    .collection
      .row.ma-0
        each item in products
          .col-md-6.col-sm-3.col-xs-6.product-item
            .collection-item.item.pa-0
              a.waves-effect
                img.responsive-img(src=item.image height='100' alt='thumb')/
                p.text-truncate.text-body-1.mt-2.mb-0 #{item.text}
                h6.price $#{item.price}
    a.btn.waves-effect.btn-flat.text-primary.block
      | #{$t.common.btn_seeall}
